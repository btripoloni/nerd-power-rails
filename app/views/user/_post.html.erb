<div id="feed" data-ng-controller="feedCtrl">
  <div class="media">
    <div class="media-body">

      <form data-ng-submit="createPost()">
        <textarea data-ng-model= "content" class="form-control" rows="2" required placeeholder="Diga algo!"></textarea><br/>
        <button type="submit" class="btn btn-primary btn-sm pull-right">Publicar</button>
      </form>

    </div> <!-- .media-body -->
  </div> <!-- .media -->
  <div class="posts" data-ng-repeat="post in posts" >
    <div class="post col-md-12">
      <a ng-if="user_id == post.user.id" ng-href="#" ng-click="removePost(post.id, $index)">
        <span class="fa fa-trash-o pull-right"></span>
      </a>
      <a ng-href="user/profile/{{post.user.nickname}}">
        <img ng-src="{{post.user.avatar}}" class="pull-left img-rounded media-object" >
        <span style="font-size:22px;"data-ng-bind="post.user.name"></span>
      </a>
      <p data-ng-bind="post.content"> </p>
    </div> <!-- post -->
  </div> <!-- .posts -->
</div> <!-- #feed -->